<p id="notice"><%= notice %></p>

<h1>Cart and Candy</h1>
<h2>Old English Sweetshop</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sweets.each do |sweet| %>
      <tr>
        <td><%= sweet.name %></td>
        <td><%= sweet.description %></td>
        <td><%= image_tag(sweet.picture_url, width: 200) if sweet.picture.present? %></td>
        <td><%= link_to 'Show', sweet %></td>
        <td><%= link_to 'Edit', edit_sweet_path(sweet) %></td>
        <td><%= link_to 'Destroy', sweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sweet', new_sweet_path %>
